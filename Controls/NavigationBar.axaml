<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Deckky.Controls.NavigationBar">
    <StackPanel>
        <Grid ShowGridLines="true" Background="#1A1E25" Height="60" ColumnDefinitions="Auto,*,Auto">
            <Rectangle Grid.Column="0" Fill="White" Height="44" Width="44" Margin="31,8,0,8" />
            <Grid Grid.Column="1" HorizontalAlignment="Center" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto">
                <Button Grid.Column="0" HorizontalContentAlignment="Center" Width="150" Foreground="White">Все игры</Button>
                <Button Grid.Column="1" CornerRadius="100" Background="White" HorizontalContentAlignment="Center" Width="150" Foreground="Black">Windows</Button>
                <Button Grid.Column="2" HorizontalContentAlignment="Center" Width="150" Foreground="White">Wine|Linux</Button>
                <Button Grid.Column="3" HorizontalContentAlignment="Center" Width="150" Foreground="White">Загрузка</Button>
                <Button Grid.Column="4" HorizontalContentAlignment="Center" Width="150" Foreground="White">Профиль</Button>
            </Grid>
            <Rectangle Grid.Column="2" Fill="White" Height="44" Width="44" Margin="0,8,31,8" />
            
        </Grid>
    </StackPanel>
</UserControl>
